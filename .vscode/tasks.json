{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Build Ferry Reservation System",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "main.cpp",
                "ui.cpp", 
                "vehicle.cpp",
                "vehicleFileIO.cpp",
                "sailing.cpp",
                "sailingFileIO.cpp",
                "reservation.cpp",
                "reservationFileIO.cpp",
                "-o",
                "ferry-system"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Builds the complete Ferry Reservation System"
        },
        {
            "type": "shell",
            "label": "Run Ferry Reservation System",
            "command": "./ferry-system",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "Build Ferry Reservation System",
            "detail": "Runs the Ferry Reservation System"
        }
    ],
    "version": "2.0.0"
}